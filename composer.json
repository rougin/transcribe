{
    "name": "rougin/transcribe",
    "description": "An easy-to-use localization library for PHP.",
    "keywords": ["language", "localization", "transcribe", "php"],
    "homepage": "https://roug.in/transcribe/",
    "license": "MIT",
    "authors":
    [
        {
            "email": "rougingutib@gmail.com",
            "homepage": "https://roug.in/",
            "name": "Rougin Gutib",
            "role": "Software Engineer"
        }
    ],
    "require":
    {
        "php": ">=5.3.0"
    },
    "require-dev":
    {
        "phpunit/phpunit": "~4.2",
        "scrutinizer/ocular": "~1.1"
    },
    "autoload":
    {
        "psr-4":
        {
            "Rougin\\Transcribe\\": "src"
        }
    },
    "autoload-dev":
    {
        "psr-4":
        {
            "Rougin\\Transcribe\\": "tests"
        }
    },
    "scripts":
    {
        "test": "phpunit"
    },
    "extra":
    {
        "branch-alias":
        {
            "dev-master": "1.0-dev"
        }
    }
}